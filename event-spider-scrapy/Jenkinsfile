pipeline {
    agent any
    stages {
        stage('install') {
            steps {
            	echo "install scrapy"
                sh 'pip install scrapy'
            }
        }
        stage('checkout') {
            steps {
            	echo "checkout scm"
                checkout scm
            }
        }
        stage('run spider') {
        	steps {
        		sh 'pwd'
        		dir('event-spider-scrapy/event') {
        			sh 'pwd'
        		}
        }
    }
}